  <div class="form-group ">
    <%= t('basliklar') %><br>
    <%= f.text_area :title, class:"form-control" %>
  </div>
  <div class="form-group ">
   <%= t('mesajlar') %><br>
    <%= f.text_area :msg, class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class:"form-control btn btn-success"%>
  </div>
 
<% end %>

 </div>
